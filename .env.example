# AutoGuru Universal - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Environment (development, staging, production)
ENVIRONMENT=development

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=autoguru
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=autoguru_universal

# Connection Pool Configuration
DB_POOL_MIN_SIZE=10
DB_POOL_MAX_SIZE=20
DB_POOL_MAX_QUERIES=50000
DB_POOL_MAX_INACTIVE_LIFETIME=300.0

# Retry Configuration
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1.0
DB_RETRY_MAX_DELAY=10.0

# Query Configuration
DB_QUERY_TIMEOUT=30
DB_STATEMENT_CACHE_SIZE=20

# SSL Configuration (optional, uncomment if needed)
# DB_SSL_MODE=require
# DB_SSL_CERT_PATH=/path/to/client-cert.pem
# DB_SSL_KEY_PATH=/path/to/client-key.pem
# DB_SSL_CA_PATH=/path/to/ca-cert.pem

# OpenAI Configuration (for content analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (optional, for content analysis)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here